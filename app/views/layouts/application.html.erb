<!DOCTYPE html>
<html>
<head>
  <title>RdInsightlyWeb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="main-container" class="container">
  <div class="row">
    <div id="content" class="col-xs-12">
      <% if session[:token] %>
        <%= link_to 'Fazer Logout', controller: 'home', action: 'logout' %>
      <% end %> 
      <div class="row">
        <h1><%= @title %></h1>
      </div>
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </div>  
</div>

</body>
</html>
